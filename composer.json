{
    "name": "ffm/hookdocs",
    "description": "Documents observers, rewrites via doc blocks",
    "type": "library",
    "require": {
        "phpdocumentor/reflection-docblock": "^3.1",
        "symfony/console": "^3.3",
        "nikic/php-parser": "^3.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sander Mangel",
            "email": "sander@sandermangel.nl"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ffm\\Hookdocs\\": "Ffm/Hookdocs/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Hookdocs\\": "tests/Hookdocs/"
        }
    },
    "bin": ["bin/documenter"],
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^3.0",
        "phpstan/phpstan": "^0.7.0",
        "phpmd/phpmd": "^2.6"
    }
}
